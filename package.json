{
  "name": "hopes_and_dreams",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:todo": "playwright test --grep @todo",
    "test:navigation": "playwright test --grep @navigation",
    "test:api": "playwright test --grep @api",
    "test:books": "playwright test --grep @books",
    "test:crud": "playwright test --grep @crud",
    "test:e2e": "playwright test --grep @e2e",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "api:start": "cd books_api && go run main.go",
    "api:test": "cd books_api && go test -v",
    "api:build": "cd books_api && go build -o bin/books_api main.go",
    "serve:demo": "python3 -m http.server 3000",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci:format": "npm run format:check && npm run lint",
    "ci:test": "npm run docker:test",
    "ci:build": "npm run docker:build",
    "ci:deploy": "echo 'Deploy stage - configure your deployment here'",
    "validate": "./scripts/validate-setup.sh",
    "docker:build": "docker compose -f docker/compose/docker-compose.yml build",
    "docker:up": "docker compose -f docker/compose/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/compose/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/compose/docker-compose.yml logs -f",
    "docker:test:build": "docker compose -f docker/compose/docker-compose.test.yml build",
    "docker:test:up": "docker compose -f docker/compose/docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f docker/compose/docker-compose.test.yml down -v",
    "docker:test": "npm run docker:test:up && npm run test && npm run docker:test:down",
    "docker:dev": "docker compose -f docker/compose/docker-compose.yml -f docker/compose/docker-compose.dev.yml up -d",
    "docker:clean": "docker compose -f docker/compose/docker-compose.yml down -v && docker system prune -f",
    "docker:setup": "./scripts/docker-setup.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.39.1"
  }
}
